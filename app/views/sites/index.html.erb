<ul class="nav nav-tabs nav-justified">
  <li class="active"><%= link_to 'Sites', sites_path %></li>  
  <li><%= link_to 'Shirts', shirts_path %></li>  
</ul>

<h1>Listing sites</h1>

<table class="table table-bordered table-condensed">
  <thead>
    <tr>
      <th>Name</th>
      <th>Last success</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @sites.each do |site| %>
      <tr class="<%= ((Time.parse(DateTime.now.to_s) - Time.parse(site.last_success.to_s)) / 1.day).round > 0 ? 'danger' : '' %>">
        <td><%= site.name %></td>
        <td><%= time_ago_in_words(site.last_success) %></td>
        <td>
          <%= link_to 'Edit', edit_site_path(site), :class => "btn btn-primary"  %>
          <!-- <%= link_to 'Destroy', site, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger"  %> -->
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Site', new_site_path, :class => "btn btn-info" %>
