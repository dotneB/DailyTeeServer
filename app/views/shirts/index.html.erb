<%= render 'admin/header' %>

<h1>Listing shirts</h1>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Site</th>
      <th>Name</th>
      <th>Content</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @shirts.each do |shirt| %>
      <tr class="<%= shirt.visible ? '' : 'danger' %>">
        <td><%= shirt.site.name %></td>
        <td><%= shirt.name %></td>
        <td>
          <img src="<%= shirt.image_url %>" class="img-responsive" style="max-width:25%" alt="Responsive image"><br />
          <%= shirt.url %>
        </td>
        <td>
          <%= link_to '<span class="glyphicon glyphicon-pencil"></span>'.html_safe, edit_shirt_path(shirt), :class => "btn btn-primary" %>
          <%= link_to '<span class="glyphicon glyphicon-trash"></span>'.html_safe, shirt, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger"  %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Shirt', new_shirt_path, :class => "btn btn-info" %>
